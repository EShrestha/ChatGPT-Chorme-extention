{
    "name": "GeePeeTee",
    "version": "0.1.0",
    "description": "Create text completions/edits, and generate images with a prompt.",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["http://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*"],
        "js": ["contentScript.js"]
      }
    ],



    "action": {
      "default_icon": {
        "16": "assets/extension-icon.png",
        "24": "assets/extension-icon.png",
        "32": "assets/extension-icon.png"
      },
      "default_title": "GeePeeTee",
      "default_popup": "popup.html"
    },

    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Period",
                "mac": "Command+Period"
            }
        },

        "openText":{
            "suggested_key": {
                "default":"Ctrl+Shift+Q",
                "windows": "Ctrl+Shift+Q",
                "mac": "Command+Z",
                "chromeos": "Ctrl+Z",
                "linux": "Ctrl+Z"
            },
            "description": "Open Text page"
        }
    },

    "manifest_version": 3
}