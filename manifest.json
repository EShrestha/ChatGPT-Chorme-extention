{
  "name": "GeePeeTee - OpenAI ChatGPT and Dall-E powered text and image assistant",
  "version": "1.2.0",
  "description": "Create text completions/edits, and generate images easily with a prompt.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },


  "action": {
    "default_icon": {
      "16": "assets/extension-icon.png",
      "24": "assets/extension-icon.png",
      "32": "assets/extension-icon.png"
    },
    "default_title": "GeePeeTee",
    "default_popup": "popup.html"
  },

  "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Space",
          "mac": "Ctrl+Space",
          "windows": "Ctrl+Space",
          "chromeos": "Ctrl+Space",
          "linux": "Ctrl+Space"
        }
      }
  },

  "manifest_version": 3
}