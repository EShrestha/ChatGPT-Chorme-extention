{
    "name": "GeePeeTee",
    "version": "0.1.0",
    "description": "Create text completions/edits, and generate images with a prompt.",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png"
        ],
        "matches": ["*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "GeePeeTee",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}